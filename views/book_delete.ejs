<h1><%= title %>: <%= book.name %></h1>

<% if (all_book_instances.length) { %>
<p>
  <strong
    >Delete the following book instances before attempting to delete this
    book.</strong
  >
</p>
<div style="margin-left: 20px; margin-top: 20px">
  <h4>Book Instances</h4>
  <dl>
    <% all_book_instances.forEach(function(bookInstance) { %>
    <dt>
      <a href="<%= bookInstance.url %>"><%= bookInstance.imprint %></a>
    </dt>
    <% }); %>
  </dl>
</div>
<% } else { %>
<p>Do you really want to delete this Book?</p>
<form method="POST">
  <div class="form-group">
    <input
      id="bookid"
      class="form-control"
      type="hidden"
      name="bookid"
      value="<%= book._id %>"
    />
  </div>
  <button class="btn btn-primary" type="submit">Delete</button>
</form>
<% } %>
